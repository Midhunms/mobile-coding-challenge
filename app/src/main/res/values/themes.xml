<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppThemeOne" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryDark">@color/app_color</item>
        <item name="colorAccent">@color/app_color</item>
    </style>

    <style name="AppThemeOne.NoActionBar" parent="AppThemeOne">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/trans_black</item>
        <item name="android:windowBackground">@color/trans_black</item>
        <item name="android:colorBackground">@color/trans_black</item>
        <item name="android:navigationBarColor">@color/trans_black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>

    </style>

